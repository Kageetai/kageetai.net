---
import "../styles/glass3d.css";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
const pageTitle = title ? `${title} | Kageetai.net` : "Kageetai.net";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    {description && <meta name="description" content={description} />}
    <script>
      import "@justinribeiro/lite-youtube";
    </script>
  </head>
  <body>
    <slot />

    <footer>© Kageetai.net {new Date().getFullYear()}</footer>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
    --color-background: light-dark(#efedea, #151716);
    --color-foreground: light-dark(#333b3c, #efefec);
    --color-interactive: light-dark(#275c4e, #a5e4d1);
    --color-border: rgba(from var(--color-interactive) r g b / 0.55);
    --radius: 0.5rem;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      sans-serif;
    line-height: 1.6;
  }

  body {
    max-width: 80ch;
    margin: 0 auto;
    padding: 2rem;
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  img {
    max-width: 100%;
    height: auto;
  }

  a {
    text-decoration: none;
    color: var(--color-interactive);

    &[href^="http"]:not(:has(> img)):after {
      content: " ↗";
      font-size: 0.8em;
      vertical-align: top;
    }
  }

  a:hover {
    text-decoration: underline;
  }

  blockquote {
    border-left: 1px solid;
    margin-inline-start: 0;
    padding-inline-start: 20px;
  }

  footer {
    font-size: 0.8rem;
  }
</style>
