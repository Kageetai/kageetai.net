---
import { ClientRouter } from "astro:transitions";
import "../styles/glass3d.css";
import ParticleBackground from "./ParticleBackground.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
const pageTitle = title ? `${title} | Kageetai.net` : "Kageetai.net";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <ClientRouter />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    {description && <meta name="description" content={description} />}
    <script>
      import "@justinribeiro/lite-youtube";
    </script>

    <!-- Matomo -->
    <script>
      // @ts-expect-error - Matomo config expected globals
      const _paq = (window._paq = window._paq || []);
      /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
      _paq.push(["setDoNotTrack", true]);
      _paq.push(["trackPageView"]);
      _paq.push(["enableLinkTracking"]);
      (function () {
        const u = "https://matomo.kageetai.net/";
        _paq.push(["setTrackerUrl", u + "matomo.php"]);
        _paq.push(["setSiteId", "1"]);
        const d = document;
        const g = d.createElement("script");
        const s = d.getElementsByTagName("script")[0];
        g.async = true;
        g.src = u + "matomo.js";
        s.parentNode?.insertBefore(g, s);
      })();
    </script>
    <!-- End Matomo Code -->
  </head>
  <body>
    <ParticleBackground>
      <slot name="banner" />
      <div class="container">
        <slot />

        <footer>
          © Kageetai.net {new Date().getFullYear()} ·
          <a href="/impressum">Impressum</a> ·
          <a href="/datenschutz">Datenschutz</a>
        </footer>
      </div>
    </ParticleBackground>

    <!-- Matomo noscript fallback -->
    <noscript>
      <img
        referrerpolicy="no-referrer-when-downgrade"
        src="https://matomo.kageetai.net/matomo.php?idsite=1&rec=1"
        style="border:0; position:absolute; left:-9999px;"
        alt=""
      />
    </noscript>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
    --color-background: light-dark(#efedea88, #15171688);
    --color-foreground: light-dark(#333b3c, #efefec);
    --color-interactive: light-dark(#275c4e, #a5e4d1);
    --color-border: rgba(from var(--color-interactive) r g b / 0.5);
    --radius: 0.5rem;
    /* Breakpoints (for reference - can't use in media queries directly) */
    --breakpoint-sm: 600px;
  }

  * {
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    padding: 0;
  }

  html {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      sans-serif;
    line-height: 1.6;
  }

  .container {
    max-width: 80ch;
    margin: 0 auto;
    padding: 2rem;
    background-color: var(--color-background);
    backdrop-filter: blur(5px);
    color: var(--color-foreground);
  }

  .banner-section + .container {
    margin-top: -10rem;
    border-top-left-radius: var(--radius);
    border-top-right-radius: var(--radius);
  }

  img {
    max-width: 100%;
    height: auto;
  }

  a {
    text-decoration: none;
    color: var(--color-interactive);

    &[href^="http"]:not(:has(> img)):after {
      content: " ↗";
      font-size: 0.8em;
      vertical-align: top;
    }
  }

  a:hover {
    text-decoration: underline;
  }

  blockquote {
    border-left: 1px solid;
    margin-inline-start: 0;
    padding-inline-start: 20px;
  }

  footer {
    font-size: 0.8rem;
    color: darkgray;
  }
</style>
